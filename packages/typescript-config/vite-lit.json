{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "noEmit": true,
    "plugins": [
      {
        "name": "ts-lit-plugin"
      }
    ],
    "sourceMap": true,
    "target": "ES2019"
  }
}
