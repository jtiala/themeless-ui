{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CI"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {},
    "build": {
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },
    "test": {},
    "test:report": {
      "outputs": ["reports/**"]
    },
    "lint": {},
    "lint:report": {
      "outputs": ["reports/**"]
    },
    "lint:fix": {},
    "clean": {
      "cache": false
    },
    "publish:npm": {
      "cache": false
    }
  }
}
