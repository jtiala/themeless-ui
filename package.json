{
  "name": "themeless-ui",
  "version": "0.1.0-alpha.5",
  "description": "A React component library harnessing the power of CSS.",
  "keywords": [
    "react",
    "component",
    "library"
  ],
  "author": "Joonas Tiala <joonas.tiala@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/jtiala/themeless-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtiala/themeless-ui"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "./dist/themeless-ui.js",
  "main": "./dist/themeless-ui.umd.cjs",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/themeless-ui.js",
      "require": "./dist/themeless-ui.umd.cjs"
    }
  },
  "scripts": {
    "build": "vite build",
    "test": "npm run test:vitest && npm run test:storybook:standalone",
    "test:report": "npm run test:vitest:report && npm run test:storybook:standalone:report",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest",
    "test:vitest:report": "vitest run --coverage --reporter default --reporter junit --outputFile ./reports/test-report-vitest.xml",
    "test:vitest:update": "vitest run --update",
    "test:storybook": "test-storybook",
    "test:storybook:watch": "test-storybook --watch",
    "test:storybook:report": "JEST_JUNIT_OUTPUT_FILE=./reports/test-report-storybook.xml test-storybook --junit",
    "test:storybook:standalone": "concurrently -k -s first -n SB,TEST -c magenta,blue \"npm run storybook:build --quiet && npx serve -Lp 6006 storybook-static\" \"wait-on tcp:6006 && npm run test:storybook\"",
    "test:storybook:standalone:report": "concurrently -k -s first -n SB,TEST -c magenta,blue \"npm run storybook:build --quiet && npx serve -Lp 6006 storybook-static\" \"wait-on tcp:6006 && npm run test:storybook:report\"",
    "lint": "npm run lint:tsc && npm run lint:eslint && npm run lint:stylelint",
    "lint:report": "npm run lint:tsc:report && npm run lint:eslint:report && npm run lint:stylelint:report",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:stylelint:fix",
    "lint:tsc": "tsc",
    "lint:tsc:report": "tsc > ./reports/lint-report-tsc.txt",
    "lint:eslint": "eslint \"**/*.{ts,tsx}\"",
    "lint:eslint:report": "eslint -f json -o ./reports/lint-report-eslint.json \"**/*.{ts,tsx}\"",
    "lint:eslint:fix": "eslint --fix \"**/*.{ts,tsx}\"",
    "lint:stylelint": "stylelint \"**/*.css\" ",
    "lint:stylelint:report": "stylelint -f json -o ./reports/lint-report-stylelint.json \"**/*.css\" ",
    "lint:stylelint:fix": "stylelint \"**/*.css\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "storybook dev -p 6006 --no-open",
    "storybook:build": "storybook build",
    "clean": "rm -rf dist storybook-static reports"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "7.0.23",
    "@storybook/addon-essentials": "7.0.23",
    "@storybook/addon-interactions": "7.0.23",
    "@storybook/addon-links": "7.0.23",
    "@storybook/blocks": "7.0.23",
    "@storybook/react": "7.0.23",
    "@storybook/react-vite": "7.0.23",
    "@storybook/test-runner": "0.11.0",
    "@storybook/testing-library": "0.2.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "@vitejs/plugin-react": "4.0.1",
    "@vitest/coverage-c8": "0.32.2",
    "axe-playwright": "1.2.3",
    "concurrently": "8.2.0",
    "eslint": "8.43.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.12",
    "jsdom": "22.1.0",
    "prettier": "2.8.8",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-test-renderer": "18.2.0",
    "serve": "14.2.0",
    "storybook": "7.0.23",
    "stylelint": "15.9.0",
    "stylelint-config-idiomatic-order": "9.0.0",
    "stylelint-config-standard": "33.0.0",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vite-plugin-dts": "2.3.0",
    "vitest": "0.32.2"
  }
}
